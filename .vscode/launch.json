{
        "version": "0.2.0",
        "configurations": [
                {
                        "name": "test",
                        "type": "go",
                        "request": "launch",
                        "mode": "test",
                        "program": "${fileDirname}"
                },
                {
                        "name": "login (plaintext)",
                        "type": "go",
                        "request": "launch",
                        "mode": "auto",
                        "program": "${workspaceFolder}",
                        "args": [
                                "login",
                                "--log-level=debug",
                                "--log-file=stdout",
                                "--plaintext",
                                "127.0.0.1:8000"
                        ]
                },
                {
                        "name": "login (token script)",
                        "type": "go",
                        "request": "launch",
                        "mode": "auto",
                        "program": "${workspaceFolder}",
                        "args": [
                                "login",
                                "--log-level=debug",
                                "--log-file=stdout",
                                "--insecure",
                                "--token-script=kubectl create token -n innabox client",
                                "localhost:8000"
                        ]
                },
                {
                        "name": "login (oauth code flow)",
                        "type": "go",
                        "request": "launch",
                        "mode": "auto",
                        "program": "${workspaceFolder}",
                        "args": [
                                "login",
                                "--log-level=debug",
                                "--log-file=stdout",
                                "--insecure",
                                "--oauth-flow=code",
                                "localhost:8000"
                        ]
                },
                {
                        "name": "login (oauth device flow)",
                        "type": "go",
                        "request": "launch",
                        "mode": "auto",
                        "program": "${workspaceFolder}",
                        "args": [
                                "login",
                                "--log-level=debug",
                                "--log-file=stdout",
                                "--insecure",
                                "--oauth-flow=device",
                                "localhost:8000"
                        ]
                },
                {
                        "name": "login (CA file)",
                        "type": "go",
                        "request": "launch",
                        "mode": "auto",
                        "program": "${workspaceFolder}",
                        "args": [
                                "login",
                                "--log-level=debug",
                                "--log-file=stdout",
                                "--ca-file=bundle.pem",
                                "localhost:8000"
                        ]
                },
                {
                        "name": "get",
                        "type": "go",
                        "request": "launch",
                        "mode": "auto",
                        "program": "${workspaceFolder}",
                        "args": [
                                "get",
                                "--log-file=stdout",
                                "--log-level=debug"
                        ]
                },
                {
                        "name": "get clustertemplates",
                        "type": "go",
                        "request": "launch",
                        "mode": "auto",
                        "program": "${workspaceFolder}",
                        "args": [
                                "get", "clustertemplates"
                        ]
                },
                {
                        "name": "get clusterorders",
                        "type": "go",
                        "request": "launch",
                        "mode": "auto",
                        "program": "${workspaceFolder}",
                        "args": [
                                "get", "clusterorders"
                        ]
                },
                {
                        "name": "get clusters",
                        "type": "go",
                        "request": "launch",
                        "mode": "auto",
                        "program": "${workspaceFolder}",
                        "args": [
                                "get", "clusters"
                        ]
                },
                {
                        "name": "get private.v1.Cluster",
                        "type": "go",
                        "request": "launch",
                        "mode": "auto",
                        "program": "${workspaceFolder}",
                        "args": [
                                "get", "private.v1.Cluster"
                        ]
                },
                {
                        "name": "edit clustertemplate",
                        "type": "go",
                        "request": "launch",
                        "mode": "auto",
                        "program": "${workspaceFolder}",
                        "args": [
                                "edit", "clustertemplate", "ocp_4_17_small"
                        ]
                },
                {
                        "name": "get token (RFC 3339)",
                        "type": "go",
                        "request": "launch",
                        "mode": "auto",
                        "program": "${workspaceFolder}",
                        "args": [
                                "get", "token", "--payload", "--rfc-3339"
                        ]
                }
        ]
}
